<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/secondbox"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="edu.gonzaga.textsecretary.MainActivity$PlaceholderFragment" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="170dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/shapes" >

        <ImageSwitcher
            android:id="@+id/imageSwitcher1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        </ImageSwitcher>
<!--  
        <ImageButton
            android:id="@+id/imageButtonState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="32dp"
            android:layout_toLeftOf="@+id/stateImage"
            android:background="@null"
            android:src="@drawable/switch_on" />
-->

        <ImageButton
            android:id="@+id/stateImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:paddingTop="20dp"
            android:layout_centerHorizontal="true"
            android:background="@null"
            android:src="@drawable/button_on" />

    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/bottomHalf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bottomBar"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

		<TextView
		    android:id="@+id/customTextTitle"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentLeft="true"
		    android:layout_alignParentTop="true"
		    android:layout_marginTop="11dp"
		    android:fontFamily="@string/title_activity_settings"
		    android:text="@string/current_message"
		    android:textAppearance="?android:attr/textAppearanceLarge"
		    android:textColor="@color/grey"
		    android:textSize="20dp"
		    android:typeface="normal" />

		<EditText
		    android:id="@+id/customMessage"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_alignLeft="@+id/customTextTitle"
		    android:layout_below="@+id/customTextTitle"
		    android:clickable="false"
		    android:textSize="20dp"
		    android:cursorVisible="false"
	        android:focusable="false" 
		    android:ems="10"
		    android:inputType="textMultiLine" >

		    <requestFocus />
		</EditText>
    	
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bottomBar"
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="155dp"
        android:background="@drawable/lowbaron" >
    </RelativeLayout>

</RelativeLayout>