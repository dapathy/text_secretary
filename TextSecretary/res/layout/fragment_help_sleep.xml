<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.gonzaga.textsecretary.HelpBootFragment" >

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/imageSleep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dip"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/alarm" />

    
    
    <ScrollView
	  	android:orientation="vertical"
	  	android:layout_marginTop="24dp"
	  	android:layout_width="fill_parent"
	  	android:layout_height="fill_parent"
	  	android:layout_alignParentLeft="true"
		android:layout_below="@+id/imageSleep">
		    <LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="10dip"
		        android:layout_marginRight="10dip"
		        android:orientation="vertical" >
		
		        <TextView
		            android:id="@+id/calendarHeader"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="Sleep and Sleep Timer"
		            android:textAppearance="?android:attr/textAppearanceLarge" />
		        
				<TextView
		            android:id="@+id/calendarBody"
		            android:layout_marginLeft="10dip"
		            
		            android:layout_marginTop="5dip"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:lineSpacingExtra="8dp"
		            android:text="@string/sleep_body"
		            android:textAppearance="?android:attr/textAppearanceMedium" />
			
				<ImageView
			        android:id="@+id/imageSleepHelpOFF"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:orientation="vertical"
	    			android:layout_gravity="center_horizontal"
			        android:src="@drawable/sleep_help_graphicoff" />
			    
			    <TextView
		            android:id="@+id/calendarBody2"
		            android:layout_marginLeft="10dip"
		            android:layout_marginTop="5dip"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:lineSpacingExtra="8dp"
		            android:text="will become the following if Sleep is on:"
		            android:textAppearance="?android:attr/textAppearanceMedium" />
			    
			    <ImageView
			        android:id="@+id/imageCalendarHelpON"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginBottom="15dip"
			        android:orientation="vertical"
	    			android:layout_gravity="center_horizontal"
			        android:src="@drawable/sleep_help_graphicon" />
			
		    </LinearLayout>
	 </ScrollView>
</RelativeLayout>
