<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context="edu.gonzaga.textsecretary.HelpBootFragment" >

    <ImageView
        android:id="@+id/imageCalendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dip"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logosmallcolor" />

	    <ScrollView
		  	android:orientation="vertical"
		  	android:layout_marginTop="20dp"
		  	
		  	android:layout_width="fill_parent"
		  	android:layout_height="fill_parent"
		  	android:layout_alignParentLeft="true"
			android:layout_below="@+id/imageCalendar">
			    <LinearLayout
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:layout_marginLeft="10dip"
			        android:layout_marginRight="10dip"
			        android:orientation="vertical" >	        
			        		        
					<TextView
			            android:id="@+id/aboutBody"
			            android:layout_width="fill_parent"
			            android:layout_height="wrap_content"
			            android:lineSpacingExtra="2dp"
    					android:gravity="center"
			            android:text="@string/about_body"
			            android:textColor="@color/white"
			            android:textAppearance="?android:attr/textAppearanceMedium" />

					<TextView
			            android:id="@+id/aboutVersion"
			            android:layout_marginTop="-5dip"
			            android:layout_width="fill_parent"
			            android:layout_height="wrap_content"
			            android:gravity="center"
			            android:textColor="@color/white"
			            android:textAppearance="?android:attr/textAppearanceMedium" />
		
			    </LinearLayout>
		 </ScrollView>

</RelativeLayout>
